<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Cemetery\Registrar\Domain\BurialPlace\ColumbariumNiche\ColumbariumNiche" table="columbarium_niche">
        <id name="id" column="id" type="columbarium_niche_id">
        </id>

        <unique-constraints>
            <unique-constraint columns="columbarium_id,columbarium_niche_number" name="columbarium_id_niche_number_uq" />
        </unique-constraints>

        <field name="columbariumId"    column="columbarium_id"           type="columbarium_id"                           />
        <field name="rowInColumbarium" column="row_in_columbarium"       type="row_in_columbarium"                       />
        <field name="nicheNumber"      column="columbarium_niche_number" type="columbarium_niche_number"                 />
        <field name="geoPosition"      column="geo_position"             type="geo_position"             nullable="true" />
        <field name="createdAt"        column="created_at"               type="datetime_immutable"                       />
        <field name="updatedAt"        column="updated_at"               type="datetime_immutable"                       />
        <field name="removedAt"        column="removed_at"               type="datetime_immutable"       nullable="true" />
    </entity>

</doctrine-mapping>
