<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Cemetery\Registrar\Domain\Model\NaturalPerson\NaturalPerson" table="natural_person">
        <id name="id" column="id" type="natural_person_id" />

        <field name="fullName"        column="full_name"        type="full_name"                          />
        <field name="phone"           column="phone"            type="phone_number"       nullable="true" />
        <field name="phoneAdditional" column="phone_additional" type="phone_number"       nullable="true" />
        <field name="email"           column="email"            type="email"              nullable="true" />
        <field name="address"         column="address"          type="address"            nullable="true" />
        <field name="bornAt"          column="born_at"          type="date_immutable"     nullable="true" />
        <field name="placeOfBirth"    column="place_of_birth"   type="place_of_birth"     nullable="true" />
        <field name="passport"        column="passport"         type="passport"           nullable="true" />
        <field name="deceasedDetails" column="deceased_details" type="deceased_details"   nullable="true" />
        <field name="createdAt"       column="created_at"       type="datetime_immutable"                 />
        <field name="updatedAt"       column="updated_at"       type="datetime_immutable"                 />
        <field name="removedAt"       column="removed_at"       type="datetime_immutable" nullable="true" />
    </entity>

</doctrine-mapping>
