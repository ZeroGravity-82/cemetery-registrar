<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Cemetery\Registrar\Domain\Model\FuneralCompany\FuneralCompany" table="funeral_company">
        <id name="id" column="id" type="funeral_company_id" />

        <field name="name"           column="name"            type="funeral_company_name"                 />
        <field name="note"           column="note"            type="funeral_company_note" nullable="true" />
        <field name="createdAt"      column="created_at"      type="datetime_immutable"                   />
        <field name="updatedAt"      column="updated_at"      type="datetime_immutable"                   />
        <field name="removedAt"      column="removed_at"      type="datetime_immutable"   nullable="true" />
    </entity>

</doctrine-mapping>
