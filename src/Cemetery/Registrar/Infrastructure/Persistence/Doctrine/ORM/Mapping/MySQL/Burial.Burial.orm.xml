<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Cemetery\Registrar\Domain\Burial\Burial" table="burial">
        <id name="id" column="id" type="burial_id">
        </id>

        <unique-constraints>
            <unique-constraint columns="code"        name="burial_code_uq"        />
            <unique-constraint columns="deceased_id" name="burial_deceased_id_uq" />
        </unique-constraints>

        <field name="code"               column="code"                  type="burial_code"                        />
        <field name="deceasedId"         column="deceased_id"           type="deceased_id"                        />
        <field name="customerId"         column="customer_id"           type="customer_id"        nullable="true" />
        <field name="burialPlaceId"      column="burial_place_id"       type="burial_place_id"    nullable="true" />
        <field name="burialPlaceOwnerId" column="burial_place_owner_id" type="natural_person_id"  nullable="true" />
        <field name="funeralCompanyId"   column="funeral_company_id"    type="funeral_company_id" nullable="true" />
        <field name="burialContainer"    column="burial_container"      type="burial_container"   nullable="true" />
        <field name="buriedAt"           column="buried_at"             type="datetime_immutable" nullable="true" />
        <field name="createdAt"          column="created_at"            type="datetime_immutable"                 />
        <field name="updatedAt"          column="updated_at"            type="datetime_immutable"                 />
        <field name="removedAt"          column="removed_at"            type="datetime_immutable" nullable="true" />
    </entity>

</doctrine-mapping>
