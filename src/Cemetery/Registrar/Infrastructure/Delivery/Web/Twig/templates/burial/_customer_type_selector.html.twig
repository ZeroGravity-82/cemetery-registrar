    </div>
    <div class="form-check form-check-inline">
      <input id="customerTypeJuristicPerson"
             type="radio"
             class="form-check-input"
             name="customerType"
             value="{{- constant('Cemetery\\Registrar\\Domain\\Model\\Organization\\JuristicPerson\\JuristicPerson::CLASS_SHORTCUT') -}}">
      <label class="form-check-label"
             for="customerTypeJuristicPerson">
        {{- constant('Cemetery\\Registrar\\Domain\\Model\\Organization\\JuristicPerson\\JuristicPerson::CLASS_LABEL')|ucfirst -}}
      </label>
    </div>
    <div class="form-check form-check-inline">
      <input id="customerTypeSoleProprietor"
             type="radio"
             class="form-check-input"
             name="customerType"
             value="{{- constant('Cemetery\\Registrar\\Domain\\Model\\Organization\\SoleProprietor\\SoleProprietor::CLASS_SHORTCUT') -}}">
      <label class="form-check-label"
             for="customerTypeSoleProprietor">
        {{- constant('Cemetery\\Registrar\\Domain\\Model\\Organization\\SoleProprietor\\SoleProprietor::CLASS_LABEL')|ucfirst -}}
      </label>
    </div>
  </div>
</div>
