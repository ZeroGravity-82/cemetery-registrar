    <div class="form-check form-check-inline">
      <input id="customerTypeNaturalPerson"
             type="radio"
             class="form-check-input"
             name="customerType"
             value="{{- constant('Cemetery\\Registrar\\Domain\\Model\\NaturalPerson\\NaturalPerson::CLASS_SHORTCUT') -}}">
      <label class="form-check-label"
             for="customerTypeNaturalPerson">
        {{- constant('Cemetery\\Registrar\\Domain\\Model\\NaturalPerson\\NaturalPerson::CLASS_LABEL')|ucfirst -}}
