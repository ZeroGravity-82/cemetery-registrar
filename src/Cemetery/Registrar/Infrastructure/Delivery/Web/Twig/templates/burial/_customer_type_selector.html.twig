<div class="row pb-3">
  <div class="col-12"
       id="customerTypeSelectorWrapper"
       data-natural-person-value="{{- constant('Cemetery\\Registrar\\Domain\\Model\\NaturalPerson\\NaturalPerson::CLASS_SHORTCUT') -}}"
       data-juristic-person-value="{{- constant('Cemetery\\Registrar\\Domain\\Model\\Organization\\JuristicPerson\\JuristicPerson::CLASS_SHORTCUT') -}}"
