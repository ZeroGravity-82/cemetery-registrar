{% extends 'base.html.twig' %}

{% block title %}Админка - Причины смерти{% endblock %}

{% block body %}
  {{ parent() }}

  <div class="mb-2 mb-lg-2">
    <p class="pt-2 fs-5 fw-bold text-success">Причины смерти <span class="text-muted fw-normal fs-6">({{ totalCount }})</span></p>

    {% include 'admin/cause_of_death/_cause_of_death_toolbar.html.twig' %}

    <div class="table-responsive">
      <table class="table table-sm table-hover caption-top" id="causeOfDeathList">
        <thead class="table-light align-middle">
          <tr>
            <th>Наименование</th>
          </tr>
        </thead>
        <tbody>
          {% for listItem in paginatedList.items %}
            {% include 'admin/cause_of_death/_cause_of_death_paginated_list_item.html.twig' %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

  {% include 'admin/cause_of_death/_form_cause_of_death.html.twig' with {'context': 'CauseOfDeath'} %}

{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script src="/js/admin/cause-of-death/cause-of-death.js"></script>
{% endblock %}
